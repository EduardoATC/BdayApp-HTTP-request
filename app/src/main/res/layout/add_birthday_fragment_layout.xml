<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_birthday_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a person's B. day"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:textSize="25sp"

        />

    <ImageView
        android:id="@+id/add_birthday_fragment_image"
        android:layout_width="193sp"
        android:layout_height="143sp"
        android:layout_below="@id/add_birthday_fragment_title"
        android:background="@android:color/background_dark"
        android:layout_marginLeft="5sp"/>

    <TextView
        android:id="@+id/add_birthday_fragment_pick_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image: "
        android:layout_toRightOf="@id/add_birthday_fragment_image"
        android:layout_below="@id/add_birthday_fragment_edit_text"
        android:textSize="15sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="30sp"

        />

    <Spinner
        android:id="@+id/add_birthday_fragment_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_birthday_fragment_edit_text"
        android:layout_toRightOf="@id/add_birthday_fragment_pick_text_view"
        android:layout_marginTop="30sp"
        >


    </Spinner>


    <EditText

        android:id="@+id/add_birthday_fragment_edit_text"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_birthday_fragment_title"
        android:layout_toRightOf="@id/add_birthday_fragment_image"
        android:hint="Name"
        android:layout_marginLeft="10sp"
        android:textSize="15sp" />

    <DatePicker
        android:id="@+id/add_birthday_frament_date_picker"
        android:layout_below="@id/add_birthday_fragment_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_centerHorizontal="true"
       >

    </DatePicker>



    <Button
        android:id="@+id/add_birthday_fragment_button"
        android:layout_below="@id/add_birthday_frament_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>